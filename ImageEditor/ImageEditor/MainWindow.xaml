    <Grid>

        <!-- Верхня панель кнопок -->
        <StackPanel Orientation="Horizontal" Background="#333" Height="50"
                    VerticalAlignment="Top">
            <Button Content="Відкрити" Width="100" Margin="10"
                    Command="{Binding AddImageCommand}" />

            <Button Content="Зберегти" Width="100" Margin="10"
                    Command="{Binding SaveCommand}" />

            <Button Content="Поворот ←90°" Width="120" Margin="10"
                    Command="{Binding RotateLeftCommand}" />

            <Button Content="Поворот 90°→" Width="120" Margin="10"
                    Command="{Binding RotateRightCommand}" />

        </StackPanel>


        <!-- Робоча область -->
        <Grid Margin="0,50,0,0">

            <!-- CANVAS зображень -->
            <Canvas x:Name="EditorCanvas"
                    Background="LightGray"
                    MouseDown="Canvas_MouseDown"
                    Height="1000"
                    Width="1500">

                <ItemsControl ItemsSource="{Binding Layers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="Canvas.Left" Value="{Binding X}" />
                            <Setter Property="Canvas.Top" Value="{Binding Y}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Image}">
                                <Image.RenderTransform>
                                    <RotateTransform Angle="{Binding Angle}" />
                                </Image.RenderTransform>
                            </Image>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </Canvas>

            <!-- Жовта рамка для вибраного шару -->
            <Rectangle x:Name="SelectionRect"
                       Stroke="Yellow"
                       StrokeThickness="3"
                       Visibility="Collapsed"
                       IsHitTestVisible="False"/>

        </Grid>

    </Grid>
    
</Window>
