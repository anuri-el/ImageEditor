        xmlns:vm="clr-namespace:ImageEditor.ViewModels"
        xmlns:conv="clr-namespace:ImageEditor.Converters"
        mc:Ignorable="d"
        Title="Image Editor" 
        Height="800" Width="1200">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
