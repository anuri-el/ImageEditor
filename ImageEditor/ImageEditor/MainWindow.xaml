<Window x:Class="ImageEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageEditor"
        xmlns:vm="clr-namespace:ImageEditor.ViewModels"
        xmlns:conv="clr-namespace:ImageEditor.Converters"
        mc:Ignorable="d"
        Title="Image Editor" 
        Height="800" Width="1200"
        KeyDown="Window_KeyDown">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхня панель кнопок -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Background="#333" 
                    Height="50">
            <Button Content="Відкрити" 
                    Width="100" 
                    Margin="10"
                    Command="{Binding AddImageCommand}" />

            <Button Content="Зберегти" 
                    Width="100" 
                    Margin="10"
                    Command="{Binding SaveCommand}" />

            <Button Content="Поворот ←90°" 
                    Width="120" 
                    Margin="10"
                    Command="{Binding RotateLeftCommand}"
                    IsEnabled="{Binding IsCropMode, Converter={StaticResource InverseBool}}" />

            <Button Content="Поворот 90°→" 
                    Width="120" 
                    Margin="10"
                    Command="{Binding RotateRightCommand}"
                    IsEnabled="{Binding IsCropMode, Converter={StaticResource InverseBool}}" />

            <Separator Width="2" Margin="10,5" Background="#555"/>

            <Button Content="Crop" 
                    Width="100" 
                    Margin="10"
                    Command="{Binding StartCropCommand}"
                    IsEnabled="{Binding IsCropMode, Converter={StaticResource InverseBool}}" />

            <Button Content="Розтягування" 
                    Width="120" 
                    Margin="10"
                    Command="{Binding StartResizeCommand}"
                    IsEnabled="{Binding IsResizeMode, Converter={StaticResource InverseBool}}" />
        </StackPanel>

        <!-- Панель слайдера обертання -->
        <Border Grid.Row="1" 
                Background="#444" 
                Padding="10"
                Visibility="{Binding IsCropMode, Converter={StaticResource InverseBoolToVis}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Обертання:" 
                           VerticalAlignment="Center"
                           Foreground="White"
                           Margin="0,0,10,0"
                           FontWeight="Bold"/>

                <Grid Grid.Column="1" MaxWidth="500">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="-45°" 
                               VerticalAlignment="Center"
                               Foreground="White"
                               Margin="0,0,10,0"/>

                    <Slider Grid.Column="1"
                            Minimum="-45"
                            Maximum="45"
                            Value="{Binding SliderAngle, Mode=TwoWay}"
                            TickFrequency="5"
                            IsSnapToTickEnabled="False"
                            VerticalAlignment="Center"
                            Margin="5,0"/>

                    <TextBlock Grid.Column="2" 
                               Text="+45°" 
                               VerticalAlignment="Center"
                               Foreground="White"
                               Margin="10,0,0,0"/>
                </Grid>

                <TextBlock Grid.Column="2" 
                           VerticalAlignment="Center"
                           Foreground="White"
                           Margin="20,0,0,0"
                           FontWeight="Bold">
                    <Run Text="Кут: "/>
                    <Run Text="{Binding SliderAngle, StringFormat={}{0:F1}°}"/>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Панель Crop -->
        <Border Grid.Row="2" 
                Background="#2C5F2D" 
                Padding="10"
                Visibility="{Binding IsCropMode, Converter={StaticResource BoolToVis}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Співвідношення:" 
                           VerticalAlignment="Center"
                           Foreground="White"
                           Margin="0,0,10,0"
                           FontWeight="Bold"/>

                <ComboBox Grid.Column="1"
                          Width="180"
                          ItemsSource="{Binding CropRatios}"
                          SelectedItem="{Binding SelectedCropRatio}"
                          Margin="0,0,10,0"/>

                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal"
                            Visibility="{Binding IsCustomRatio, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="Ш:" 
                               VerticalAlignment="Center"
                               Foreground="White"
                               Margin="10,0,5,0"/>
                    <TextBox Width="60"
                             Text="{Binding CustomRatioWidth, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"/>
                    <TextBlock Text="В:" 
                               VerticalAlignment="Center"
                               Foreground="White"
                               Margin="10,0,5,0"/>
                    <TextBox Width="60"
                             Text="{Binding CustomRatioHeight, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="4"
                        Content="✓ Застосувати" 
                        Width="120" 
                        Margin="10,0"
                        Background="#4CAF50"
                        Foreground="White"
                        Command="{Binding ApplyCropCommand}"/>

                <Button Grid.Column="5"
                        Content="✗ Скасувати" 
                        Width="100" 
                        Margin="0"
                        Background="#F44336"
                        Foreground="White"
                        Command="{Binding CancelCropCommand}"/>
            </Grid>
        </Border>

        <!-- Панель Resize -->
        <Border Grid.Row="3" 
                Background="#2D5F97" 
                Padding="10"
                Visibility="{Binding IsResizeMode, Converter={StaticResource BoolToVis}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Розмір:" 
                           VerticalAlignment="Center"
                           Foreground="White"
                           Margin="0,0,10,0"
                           FontWeight="Bold"/>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal">
                    <TextBlock Text="Ширина:" 
                               VerticalAlignment="Center"
                               Foreground="White"
                               Margin="10,0,5,0"/>
                    <TextBox Width="80"
                             Text="{Binding ResizeArea.Width, StringFormat=F0, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"
                             IsReadOnly="True"/>
                    <TextBlock Text="px" 
                               VerticalAlignment="Center"
                               Foreground="White"
                               Margin="5,0,15,0"/>

                    <TextBlock Text="Висота:" 
                               VerticalAlignment="Center"
                               Foreground="White"
                               Margin="10,0,5,0"/>
                    <TextBox Width="80"
                             Text="{Binding ResizeArea.Height, StringFormat=F0, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"
                             IsReadOnly="True"/>
                    <TextBlock Text="px" 
                               VerticalAlignment="Center"
                               Foreground="White"
                               Margin="5,0,0,0"/>
                </StackPanel>

                <Button Grid.Column="2"
                        Content="✓ Застосувати" 
                        Width="120" 
                        Margin="10,0"
                        Background="#4CAF50"
                        Foreground="White"
                        Command="{Binding ApplyResizeCommand}"/>

                <Button Grid.Column="3"
                        Content="✗ Скасувати" 
                        Width="100" 
                        Margin="0"
                        Background="#F44336"
                        Foreground="White"
                        Command="{Binding CancelResizeCommand}"/>
            </Grid>
        </Border>

        <!-- Робоча область зі скролом -->
        <ScrollViewer Grid.Row="4" 
                      x:Name="MainScrollViewer"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Background="#555"
                      SizeChanged="ScrollViewer_SizeChanged">

            <!-- Один Grid як контейнер для всього -->
            <Grid Width="{Binding CanvasWidth}"
                  Height="{Binding CanvasHeight}">

                <!-- CANVAS зображень -->
                <Canvas x:Name="EditorCanvas"
                        Background="LightGray"
                        MouseDown="Canvas_MouseDown"
                        MouseMove="Canvas_MouseMove"
                        MouseUp="Canvas_MouseUp">

                    <ItemsControl ItemsSource="{Binding Layers}"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <Setter Property="Canvas.Left" Value="{Binding X}" />
                                <Setter Property="Canvas.Top" Value="{Binding Y}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Image, Mode=OneWay}" 
                                       Width="{Binding ImageWidth}"
                                       Height="{Binding ImageHeight}"
                                       Stretch="None"
                                       RenderTransformOrigin="0.5,0.5">
                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <RotateTransform Angle="{Binding Angle}"/>
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Жовта рамка для вибраного шару -->
                    <Rectangle x:Name="SelectionRect"
                               Stroke="Yellow"
                               StrokeThickness="3"
                               Visibility="Collapsed"
                               IsHitTestVisible="False"
                               Panel.ZIndex="1000">
                        <Rectangle.RenderTransform>
                            <RotateTransform x:Name="SelRotate" />
                        </Rectangle.RenderTransform>
                    </Rectangle>

                </Canvas>

                <!-- Crop Grid поверх Canvas -->
                <Canvas x:Name="CropGridCanvas"
                        Visibility="Collapsed"
                        Panel.ZIndex="2000"
                        Background="Transparent">

                    <!-- Затемнення (4 прямокутники навколо crop області) -->
                    <Rectangle x:Name="DimTop" 
                               Fill="#80000000" 
                               IsHitTestVisible="False"/>
                    <Rectangle x:Name="DimLeft" 
                               Fill="#80000000" 
                               IsHitTestVisible="False"/>
                    <Rectangle x:Name="DimRight" 
                               Fill="#80000000" 
                               IsHitTestVisible="False"/>
                    <Rectangle x:Name="DimBottom" 
                               Fill="#80000000" 
                               IsHitTestVisible="False"/>

                    <!-- Crop Border -->
                    <Border x:Name="CropBorder"
                            BorderBrush="White"
                            BorderThickness="2"
                            Background="Transparent"
                            MouseDown="CropBorder_MouseDown"
                            MouseMove="CropBorder_MouseMove"
                            MouseUp="CropBorder_MouseUp">

                        <!-- Один Grid як контейнер -->
                        <Grid>
                            <!-- Сітка 3x3 -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <!-- Вертикальні лінії -->
                                <Line Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" 
                                      X1="0" Y1="0" X2="0" Y2="1" 
                                      Stretch="Fill" Stroke="White" StrokeThickness="1" Opacity="0.5"/>
                                <Line Grid.Row="0" Grid.RowSpan="3" Grid.Column="2" 
                                      X1="0" Y1="0" X2="0" Y2="1" 
                                      Stretch="Fill" Stroke="White" StrokeThickness="1" Opacity="0.5"/>

                                <!-- Горизонтальні лінії -->
                                <Line Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" 
                                      X1="0" Y1="0" X2="1" Y2="0" 
                                      Stretch="Fill" Stroke="White" StrokeThickness="1" Opacity="0.5"/>
                                <Line Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" 
                                      X1="0" Y1="0" X2="1" Y2="0" 
                                      Stretch="Fill" Stroke="White" StrokeThickness="1" Opacity="0.5"/>
                            </Grid>

                            <!-- Canvas для ручок -->
                            <Canvas>
                                <Ellipse x:Name="TopLeft" Fill="White" Width="12" Height="12" 
                                         Canvas.Left="-6" Canvas.Top="-6" Cursor="SizeNWSE"
                                         MouseDown="CropResizeHandle_MouseDown"
                                         MouseMove="CropResizeHandle_MouseMove"
                                         MouseUp="CropResizeHandle_MouseUp"/>
                                <Ellipse x:Name="TopRight" Fill="White" Width="12" Height="12" 
                                         Canvas.Right="-6" Canvas.Top="-6" Cursor="SizeNESW"
                                         MouseDown="CropResizeHandle_MouseDown"
                                         MouseMove="CropResizeHandle_MouseMove"
                                         MouseUp="CropResizeHandle_MouseUp"/>
                                <Ellipse x:Name="BottomLeft" Fill="White" Width="12" Height="12" 
                                         Canvas.Left="-6" Canvas.Bottom="-6" Cursor="SizeNESW"
                                         MouseDown="CropResizeHandle_MouseDown"
                                         MouseMove="CropResizeHandle_MouseMove"
                                         MouseUp="CropResizeHandle_MouseUp"/>
                                <Ellipse x:Name="BottomRight" Fill="White" Width="12" Height="12" 
                                         Canvas.Right="-6" Canvas.Bottom="-6" Cursor="SizeNWSE"
                                         MouseDown="CropResizeHandle_MouseDown"
                                         MouseMove="CropResizeHandle_MouseMove"
                                         MouseUp="CropResizeHandle_MouseUp"/>
                            </Canvas>
                        </Grid>

                    </Border>

                </Canvas>

                <!-- Resize Grid поверх Canvas -->
                <Canvas x:Name="ResizeGridCanvas"
                        Visibility="Collapsed"
                        Panel.ZIndex="2000"
                        Background="Transparent">

                    <!-- Resize Border -->
                    <Border x:Name="ResizeBorder"
                            BorderBrush="Blue"
                            BorderThickness="2"
                            Background="Transparent">

                        <Grid>
                            <!-- Canvas для ручок -->
                            <Canvas>
                                <!-- Кутові ручки (пропорційний scale) -->
                                <Ellipse x:Name="ResizeTopLeft" 
                                         Fill="Blue" Width="14" Height="14" 
                                         Canvas.Left="-7" Canvas.Top="-7" 
                                         Cursor="SizeNWSE"
                                         MouseDown="ResizeImageHandle_MouseDown"
                                         MouseMove="ResizeImageHandle_MouseMove"
                                         MouseUp="ResizeImageHandle_MouseUp"
                                         Tag="TopLeft"/>

                                <Ellipse x:Name="ResizeTopRight" 
                                         Fill="Blue" Width="14" Height="14" 
                                         Canvas.Right="-7" Canvas.Top="-7" 
                                         Cursor="SizeNESW"
                                         MouseDown="ResizeImageHandle_MouseDown"
                                         MouseMove="ResizeImageHandle_MouseMove"
                                         MouseUp="ResizeImageHandle_MouseUp"
                                         Tag="TopRight"/>

                                <Ellipse x:Name="ResizeBottomLeft" 
                                         Fill="Blue" Width="14" Height="14" 
                                         Canvas.Left="-7" Canvas.Bottom="-7" 
                                         Cursor="SizeNESW"
                                         MouseDown="ResizeImageHandle_MouseDown"
                                         MouseMove="ResizeImageHandle_MouseMove"
                                         MouseUp="ResizeImageHandle_MouseUp"
                                         Tag="BottomLeft"/>

                                <Ellipse x:Name="ResizeBottomRight" 
                                         Fill="Blue" Width="14" Height="14" 
                                         Canvas.Right="-7" Canvas.Bottom="-7" 
                                         Cursor="SizeNWSE"
                                         MouseDown="ResizeImageHandle_MouseDown"
                                         MouseMove="ResizeImageHandle_MouseMove"
                                         MouseUp="ResizeImageHandle_MouseUp"
                                         Tag="BottomRight"/>

                                <!-- Бокові ручки (розтягування по одній осі) -->
                                <Rectangle x:Name="ResizeTop" 
                                           Fill="Blue" Width="40" Height="8" 
                                           Canvas.Left="-20" Canvas.Top="-4"
                                           Cursor="SizeNS"
                                           MouseDown="ResizeImageHandle_MouseDown"
                                           MouseMove="ResizeImageHandle_MouseMove"
                                           MouseUp="ResizeImageHandle_MouseUp"
                                           Tag="Top"
                                           RadiusX="2" RadiusY="2"/>

                                <Rectangle x:Name="ResizeBottom" 
                                           Fill="Blue" Width="40" Height="8" 
                                           Canvas.Left="-20" Canvas.Bottom="-4"
                                           Cursor="SizeNS"
                                           MouseDown="ResizeImageHandle_MouseDown"
                                           MouseMove="ResizeImageHandle_MouseMove"
                                           MouseUp="ResizeImageHandle_MouseUp"
                                           Tag="Bottom"
                                           RadiusX="2" RadiusY="2"/>

                                <Rectangle x:Name="ResizeLeft" 
                                           Fill="Blue" Width="8" Height="40" 
                                           Canvas.Left="-4" Canvas.Top="-20"
                                           Cursor="SizeWE"
                                           MouseDown="ResizeImageHandle_MouseDown"
                                           MouseMove="ResizeImageHandle_MouseMove"
                                           MouseUp="ResizeImageHandle_MouseUp"
                                           Tag="Left"
                                           RadiusX="2" RadiusY="2"/>

                                <Rectangle x:Name="ResizeRight" 
                                           Fill="Blue" Width="8" Height="40" 
                                           Canvas.Right="-4" Canvas.Top="-20"
                                           Cursor="SizeWE"
                                           MouseDown="ResizeImageHandle_MouseDown"
                                           MouseMove="ResizeImageHandle_MouseMove"
                                           MouseUp="ResizeImageHandle_MouseUp"
                                           Tag="Right"
                                           RadiusX="2" RadiusY="2"/>
                            </Canvas>
                        </Grid>
                    </Border>

                </Canvas>

            </Grid>

        </ScrollViewer>

    </Grid>

</Window>
